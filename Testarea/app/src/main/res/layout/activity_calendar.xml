<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalendarActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextClock"
                android:textColor="@color/purple_500"/>
            <TextClock
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextClock>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AnalogClock"
                android:textColor="@color/purple_500"/>
            <AnalogClock
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></AnalogClock>

            <Button
                android:id="@+id/calendar_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DatePicker"
                android:textColor="@color/purple_500"/>
            <DatePicker
                android:id="@+id/calendar_DatePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></DatePicker>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TimePicker"
                android:textColor="@color/purple_500"/>
            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TimePicker>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CalendarView"
                android:textColor="@color/purple_500"/>
            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></CalendarView>

        </LinearLayout>


    </ScrollView>


</LinearLayout>